{
  "name": "keadatabase-survey",
  "version": "0.1.0",
  "private": true,
  "homepage": "https://survey.keadatabase.nz",
  "dependencies": {
    "bootstrap": "^4.3.1",
    "mapbox-gl": "^1.0.0",
    "prop-types": "^15.7.2",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-helmet": "^5.2.1",
    "react-mapbox-gl": "^4.4.0",
    "react-router-dom": "^5.0.0",
    "react-scripts": "3.0.1"
  },
  "scripts": {
    "build-css": "node-sass-chokidar --include-path ./node_modules --include-path ./src/assets/css src/ -o src/",
    "watch-css": "node-sass-chokidar --include-path ./node_modules --include-path ./src/assets/css src/ -o src/ --watch --recursive",
    "pretest": "npm run build-css",
    "predeploy": "npm run build-css && npm run build",
    "deploy": "s3-deploy './build/**' --cwd './build/' --region ap-southeast-2 --bucket survey.keadatabase.nz",
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not ie <= 10",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "husky": "^2.3.0",
    "node-sass-chokidar": "^1.3.5",
    "prettier": "^1.17.1",
    "pretty-quick": "^1.11.0",
    "s3-deploy": "^1.3.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  }
}
